<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hjh.toast_my">
    <!-- 指示灯权限-->
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <!-- 震动权限-->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".dalog_activity"
            android:label="Dialog"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".Notification"
            android:label="Notification"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".select_activity"
            android:label="select_activity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".contentmenu_acitvity"
            android:label="contentmenu_acitvity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".submenu"
            android:label="submenu"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
